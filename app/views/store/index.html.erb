<h1>Your Pragmatic Catalog</h1>

<% for product in @products %>
  <div class="entry <%= cycle('odd', 'even') %>">
    <%= image_tag(product.image_url) %>
    <h3><%=h product.title %></h3>
    <%= product.description %>
    <div class="price-line">
      <span class="price">$<%=h product.price %></span>
    </div>
  </div>
<% end %>